<?xml version = '1.0' encoding = 'UTF-8'?>
<!DOCTYPE item PUBLIC "-//Art Technology Group, Inc.//DTD Repository Ouput Specifier 1.0//EN" "http://www.atg.com/dtds/search/indexing-dependency-schema.dtd">
<!--
  Indexing Dependency Schema for Commerce Catalogs

  @version $Id: //hosting-blueprint/B2CBlueprint/version/10.2/Endeca/International/Index/config/atg/commerce/endeca/index/product-sku-output-config.xml#2 $
  @updated $DateTime: 2012/12/26 06:47:02 $ 
  -->

<item item-descriptor-name="product">

  <properties>
    <property name="displayName" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    <property filter="concat" name="keywords" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    <property name="briefDescription" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    <property name="description" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    <property name="longDescription" property-accessor="languagePropertyAccessor" text-searchable="true"/>
  </properties>

  <item property-name="features">
    <properties>
      <property name="displayName" property-accessor="languagePropertyAccessor"/>
    </properties>
  </item>

  <item property-name="childSKUs">
  
    <properties>
      <property name="color" filter="unique" property-accessor="languagePropertyAccessor" subtype="clothing-sku" 
          text-searchable="true" is-dimension="true" type="string"/>
      <property name="woodFinish" property-accessor="languagePropertyAccessor" subtype="furniture-sku"
          text-searchable="true" type="string"/>
      <property name="size" filter="unique" property-accessor="languagePropertyAccessor" subtype="clothing-sku"
          text-searchable="true" type="string" is-dimension="true"/>
      <property name="description" property-accessor="languagePropertyAccessor" text-searchable="true"/>
      <property name="displayName" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    </properties>
    
  </item>

  <item property-name="ancestorCategories">
    <properties>
      <property name="displayName" property-accessor="languagePropertyAccessor" text-searchable="true"/>
    </properties>
  </item>
 
</item>
