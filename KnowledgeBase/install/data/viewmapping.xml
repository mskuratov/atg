<!DOCTYPE gsa-template SYSTEM "dynamosystemresource:/atg/dtds/gsa/gsa_1.0.dtd">
<gsa-template>

  <!--
    =================================================================== 
    View mappings for the store.knowledgebase module
    ===================================================================
  -->

  <!--
    Update the default site category 'Operations' itemViewMapping's
    includedCategories to include RightNow.
  -->

  <update-item item-descriptor="attributeValue" id="SaAvDefCatIncCatsOps" skip-update="true">
    <set-property name="value" add="true" value=",categoryLocalization,categoryEmail,categoryRightNow">
    </set-property>
  </update-item>

</gsa-template>
